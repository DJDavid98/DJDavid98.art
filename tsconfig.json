{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // Temporarily disable until https://github.com/isaachinman/next-i18next/issues/995 is fixed
    "strict": false,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "modules/*": ["src/scss/modules/*"],
      "src/*": ["src/*"],
      "typings/*": ["typings/*"],
      "*": ["typings/*"]
    },
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
